---
const projects = [
  {
    image: "/portfolio.png",
    name: "Portfolio Webpage",
    projectUrl: "https://codepen.io/gunapalani19-the-sans/pen/zYpxxqr",
    description: "I created this personal project in order to show how to create an interface in Figma using a portfolio as an example.",
  },
  {
    image: "/product-landing.jpg",
    name: "Product Landing Page",
    projectUrl: "https://codepen.io/gunapalani19-the-sans/pen/PoOMPKd",
    description: "I created this personal project in order to show how to create an interface in Figma using a portfolio as an example.",
  },
  {
    image: "/survay-from.jpg",
    name: "Survey Form",
    projectUrl: "https://codepen.io/gunapalani19/pen/QWqqPYz",
    description: "I created this personal project in order to show how to create an interface in Figma using a portfolio as an example.",
  },
  {
    image: "/calculator.png",
    name: "Responsive Calculator",
    projectUrl: "https://codepen.io/gunameena2002/pen/OJQMQgJ",
    description: "I created this personal project in order to show how to create an interface in Figma using a portfolio as an example.",
  },
];
---

<div class="mx-72 my-10">
  <div class="flex justify-center my-4 text-3xl font-extrabold leading-snug"><span class="border-solid border-b-[3px] border-[#fdc435]">Projects</span></div>
  <div class="">
    {
      projects.map((project) => (
        <div class="flex justify-center items-center bg-white my-14 rounded-xl">
          <div class="w-1/2 m-10">
            <div class=" text-2xl font-bold my-3">{project.name}</div>
            <div class="text-[#828282] my-3">{project.description}</div>
            <a href={project.projectUrl} target="_blank">
              <button class="border border-black rounded-3xl py-1 px-3 my-3"> View Project</button>
            </a>
          </div>
          <div class="w-1/2">
            <div class="h-64">
              <img class="rounded-tr-xl rounded-br-xl w-full h-full" src={project.image} />
            </div>
          </div>
        </div>
      ))
    }
  </div>
</div>
